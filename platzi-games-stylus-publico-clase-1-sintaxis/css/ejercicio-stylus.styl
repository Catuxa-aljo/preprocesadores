fuente-principal= 'Lato', sans-serif
fuente-auxiliar= 'Oswald', sans-serif
color-principal= #333
color-secundario= #8841DA
color-claro= #fff

contenedor()
    display: flex
    width: 90%
    margin: 0 auto
    padding: 30px 0

box-shadow()
    background-color: color-claro
    box-shadow: 0 20px 33px 0 rgba(0,0,0,0.20)

* 
    box-sizing: border-box

body
    margin: 0
    font-family: fuente-principal
    color: color-principal

.buscador
    width: 100%
    height: 250px
    padding: 100px
    background-image: url('../images/cover.jpg')
    background-size: cover
    text-align: center
    &__input
        width: 75%
        height: 60px
        padding: 20px
        border: none
        border-radius: 30px
        font-size: 25px

.encabezado--con-filtros
    contenedor()
    h2
        margin-top: 100px
        text-transform: uppercas
        font-weigth: 500
        font-size: 50px
        font-family: fuente-auxiliar
    .filtros
        width: 250px
        height: 75px
        padding: 20px
        margin-left: auto
        box-shadow()
        span
            text-transform: uppercase
            font-family: fuente-auxiliar
        a
            margin-left: 20px
            font-size: 25px
            color: color-primario

.contenido
    margin-bottom: 40px
    justify-content: space-evenly
    contenedor()

.caja
    max-width: 400px
    box-shadow()
    &__contenido
        padding: 20px
        background-color: color-claro
        span
            text-transform: uppercase
            color: color-secundario
            font-family: fuente-auxiliar
        h3
            text-transorm: uppercase
            font-weight: normal
            font-family: fuente-auxiliar


