fuente-principal= 'Lato', sans-serif
fuente-auxiliar= 'Oswald', sans-serif
color-principal= #333
color-secundario= #8841DA
color-claro= #fff

contenedor()
    display: flex
    width: 96%
    margin: 0 auto
    padding: 30px 0

box-shadow()
    background-color: color-claro
    box-shadow: 0 20px 33px 0 rgba(0,0,0,0.20)

opacidad(color, nivel)
    alpha(color, nivel)

for header in 3 2 1
    h{header}
        font-size: 35px - (5*header)
        margin: 0

titulos(font)
    if font == fuente-principal
        font-family: fuente-principal
    else
        font-family: fuente-auxiliar
        font-weight: 600
        text-transform: uppercase

* 
    box-sizing: border-box

body
    margin: 0
    color: color-principal
    titulos(fuente-principal)