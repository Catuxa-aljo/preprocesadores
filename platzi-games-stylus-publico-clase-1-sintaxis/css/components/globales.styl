fuente-principal= 'Lato', sans-serif
fuente-auxiliar= 'Oswald', sans-serif
color-principal= #333
color-secundario= #8841DA
color-claro= #fff

contenedor()
    display: flex
    width: 96%
    margin: 0 auto
    padding: 30px 0

box-shadow()
    background-color: color-claro
    box-shadow: 0 20px 33px 0 rgba(0,0,0,0.20)

opacidad(color, nivel)
